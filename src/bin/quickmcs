#!/bin/bash

function exitP(){
case $1 in
  0 )
    return 0
;;
  4 )
    echo "Complete! Program is now finished."
;;
esac
}

function initVariables(){
return 0
}

function loadOption(){
return 0
}

function main(){
opt_Overall=$*

case $1 in
  "install" )
    installServer $opt_Overall
;;
  "convert" )
    convertServer $opt_Overall
;;
  "duplicate" )
    duplicateServer $opt_Overall
;;
  "remove" )
    removeServer $opt_Overall
;;
esac
}

function installServer(){
local installopt=$*
quickmcs-install $installopt
}

function convertServer(){
local convertopt=$*
quickmcs-convert $convertopt
}

function duplicateServer(){
local duplicateopt=$*
quickmcs-duplicate $duplicateopt
}

function removeServer(){
local removeopt=$*
quickmcs-remove $removeopt
}

main $*


exit 0


